<h2>Novedades</h2>
<div>
    <form style="float: right; position: relative; bottom:35px;" action="/novedades" method="get">
        <input type="search" name="q" {{#if q}} value="{{q}}" {{/if}}>
        <button type="submit">buscar</button>
    </form>
</div>
{{#each novedades}}
<div style="margin-top: 45px">

    <h3> {{titulo}} </h3>
    <h4>{{Subtitulo}}</h4>
    <p>{{cuerpo}}</p>
    <hr />
</div>
{{/each}}
{{#if is_search}}
    {{#unless novedades.length}}
        <p>No se encontraron resultados para <b>"{{q}}"</b></p>
    {{/unless}}
{{/if}}